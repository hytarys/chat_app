<div class = "main_box_top">
  <div class = "main_box_top_left">
    <div class = "main_user_name">hogefuga
    </div>
  </div>
  <div class = "main_box_top_right">
    <div class = "chat_end">
      <a href = "#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class = "main_box_main">
  <div class = "message_box">
    <div class = "message_box_upper">
      <div class = "message_user">Tom</div>
      <div class = "time">時間</div>
    </div>
    <div class = "message_box_under">
      <div class = "content">おはよう</div>
    </div>
  </div>
</div>
  
  <%= form_with model: [@room, @message], html: {class: "main_box_under"}, local: true do |f|%>
    <div class="text_box">
      <%= f.text_field :content, class: 'text_form', placeholder: 'type a message'%>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'submit' %>
  <% end %>