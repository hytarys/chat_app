<div class="message">
  <div class="message_box_upper">
    <div class="message_user">
    <!-- 投稿したユーザー名情報を出力する -->
    <%= message.user.name%>
    </div>
    <div class="time">
    <!-- 投稿した時刻を出力する -->
    <%= l message.created_at%>
    </div>
  </div>
  <div class="message_box">
    <div class="content">
    <!-- 投稿したメッセージ内容を記述する -->
    <%= message.content%>
    </div>
    <%= image_tag message.image.variant(resize:'500*500'), class: 'form-image' if message.image.attached?%>
  </div>
</div>